<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>

    </style>
    <style name="btn_category_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">88dp</item>
<!--        <item name="android:drawableStart">@drawable/ic_star_black_48dp</item>-->
<!--        <item name="android:background">@drawable/round_category_background_button</item>-->
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="btn_back_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/ripple_back_button</item>
        <item name="android:drawableStart">@drawable/ic_arrow_back_32dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="btn_x_to_welcome" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/ripple_back_button</item>
        <item name="android:drawableStart">@drawable/ic_x_32dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="btn_x_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/ripple_back_button</item>
        <item name="android:drawableStart">@drawable/ic_x_32dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="btn_remove_item_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/ripple_back_button</item>
        <item name="android:drawableStart">@drawable/ic_x_24dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="btn_dine_in" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/ripple_dine_in_btn</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="btn_round_sides_white" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/myBlack</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/ripple_round_white_btn</item>
    </style>
    <style name="btn_round_sides_green" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/myBlack</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/ripple_round_green_btn</item>
    </style>
    <style name="tv_menu_item_name_text_style">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">3</item>
        <item name="android:singleLine">false</item>
        <item name="android:text">Breakfast 1 with bacon bacon and egg &amp; cheese</item>
        <item name="android:textColor">@color/myBlack</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="spinner_style">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

</resources>
